<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#598c04"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="lv.digitalteam.android.socionicscalculator.MainActivity"
    tools:showIn="@layout/app_bar_main">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#abf234"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/score"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="#000000"
            android:fontFamily="sans-serif-light"
            android:gravity="center"
            android:padding="16dp"
            android:text="Rezultats"
            android:textColor="#ffffff"
            android:textSize="18sp" />
    </LinearLayout>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:text="Vienkars socionikas tipu noteikšanas kalkulators."
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/scoreB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="#000000"
                android:fontFamily="sans-serif-light"
                android:gravity="center"
                android:padding="16dp"
                android:text="RezultatsB"
                android:textColor="#ffffff"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#abf234"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Intraverts" />

            <RadioGroup
                android:id="@+id/intraEkstraRadioGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#abf234"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/intravertsRadioButton"
                    android:layout_width="wrap_content"
                    android:onClick="addIntraverts"
                    android:layout_height="wrap_content" />

                <RadioButton
                    android:id="@+id/ekstravertsRadioButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="addEkstraverts"/>
            </RadioGroup>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ekstraverts" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#abf234"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Racionāls" />

            <RadioGroup
                android:id="@+id/racionIracionRadioGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#abf234"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/racionalRadioButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="addRacionals"/>

                <RadioButton
                    android:id="@+id/iracionalRadioButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="addIracionals"/>
            </RadioGroup>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Iracionāls" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#abf234"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Loģisks" />

            <RadioGroup
                android:id="@+id/logisksEtisksRadioGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text"
                android:background="#abf234"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/logisksRadioButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="addLogisks"/>

                <RadioButton
                    android:id="@+id/etisksRadioButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:onClick="addEtisks"/>
            </RadioGroup>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ētisks" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#abf234"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Intuīts" />

            <RadioGroup
                android:id="@+id/IntuitsSensorsRadioGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text"
                android:background="#abf234"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/intuitsRadioButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:onClick="addIntuits"/>

                <RadioButton
                    android:id="@+id/sensorsRadioButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:onClick="addSensors"/>
            </RadioGroup>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sensors" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>


